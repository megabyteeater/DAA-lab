#include <bits/stdc++.h>
using namespace std;

int main()
{
    int factorial(int);
    int fact,n;
    cout<<"Enter positive number : ";
    cin>>n;
    fact=factorial(n);
    cout<<"Factorial of number : "<<fact<<endl;
    return 0;
}

int factorial(int n)
{
    if(n<0)
        return -1;  // wrong value
    else if (n==0)
        return 1;
    else{
        return (n*factorial(n-1));
    }
}
